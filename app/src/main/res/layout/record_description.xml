<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"/>

        <ImageView
            android:id="@+id/desc_image"
            android:scaleType="centerCrop"
            android:layout_width="388dp"
            android:layout_below="@id/name"
            android:layout_height="400dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_image"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:text="Price:"
        android:textSize="20dp"/>

        <TextView
            android:id="@+id/desc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price"
            android:layout_toEndOf="@+id/price"
            android:layout_below="@id/desc_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>

    <TextView
        android:id="@+id/descheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_price"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descheader"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/ratheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:textStyle="bold"
        android:text="Ratings:"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="2.5"
        android:numStars="5"
        android:layout_below="@id/ratheader"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/quatheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingbar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Quantity" />

    <Spinner
        android:id="@+id/quantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbar"
        android:layout_toRightOf="@+id/quatheader"
        android:layout_toEndOf="@+id/quatheader"
        android:gravity="center"
        android:background="@color/teal_200"
        android:padding="10dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/submit"
        android:padding="10dp"
        android:layout_below="@id/quantity"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Submit" />


</RelativeLayout>
</ScrollView>